
<div class="show-container">
  <div class="show-page-card">
    <!-- <div class="carousel-inner"> -->
      <% @item.photos.each do |photo| %>
        <!-- <div class="carousel-item"> -->
          <div class="trash-can">
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: 'show-card-img' %>
          </div>
        <!-- </div> -->
      <% end %>
    <!-- </div> -->
    <div class="show-card-details">
      <div class= "show-card-info">
        <h1 class= "show-card-title"><%= @item.title.capitalize %></h1>
        <p><strong>Price: </strong>$<%= @item.price %></p>
        <p><strong>About this item: </strong><%= @item.description %></p>
      </div>
      <div class="show-card-links">
        <div>
          <% if policy(@item).edit? %>
            <%= link_to "Edit", edit_item_path(@item), class: 'button' %>
          <% end %>
          <% if policy(@item).destroy? %>
            <%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: "Are you sure you want to delete this item?" }, class: 'button'%>
          <% end %>
          <% if @item.booking %>
            <%= link_to "Cancel booking", booking_path(@item.booking), method: :delete, data: { confirm: "Are you sure you want to delete this booking?" }, class: 'button' %>
            <p>You have reserved this item.</p>
            <p>Email <strong><%= @item.user.email %></strong> to arrange the transcation.</p>
          <% else %>
            <%= link_to "Book", item_bookings_path(@item), method: :post, class: 'button'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

