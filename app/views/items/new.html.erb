<div class="form-container">
  <div class="form-flexbox">
  <!-- <h2 class="form font">Adding new <strong> Item</strong></h2> -->
  <div class="img">
  <img src="https://www.pawprintbadges.co.uk/ekmps/shops/9507f2/images/recycling-collection-255-p.png" alt="" class="img-center">
  </div>
  <div class="simple-form">
    <h2 class="new-form-title color">Add New Item</h2>
  <%= simple_form_for [@item] do |f| %>
        <%= f.input :title   %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :address %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class: 'button' %>
  <% end %>
  </div>
 </div>
 </div>

