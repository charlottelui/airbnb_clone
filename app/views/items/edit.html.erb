<div class="container">
  <h2 class="mt-3 text-center color">Edit Item</h2>
<%= simple_form_for [@item] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, class: 'button' %>
    <% end %>

    <% @item.photos.each do |photo| %>
   <%=  cl_image_tag(photo.key, height: 300, width: 400, crop: :fill) %>
   <%= link_to 'delete photo',"/items/#{@item.id}/photo/#{photo.id}" , method: :delete, class: 'button' %>
    <% end %>
<%= link_to "back to item", item_path(@item), class: 'button' %>
</div>
