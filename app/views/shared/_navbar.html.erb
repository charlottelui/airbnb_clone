<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to "/", class: "navbar-brand" do %>
    <div class="navbar-logo">
      <div class="logo">
        <%= image_tag "https://www.pawprintbadges.co.uk/ekmps/shops/9507f2/images/recycling-collection-255-p.png" %>
      </div>
      <p class="logo-text">Waste-List</p>
    </div>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active mr-2">
          <div class="nav-text">
          <%= link_to items_path, class: "nav-link" do %>
            <i class="fas fa-list-ul"></i><i class="fas fa-recycle"></i>
            <p>All Waste</p>
          <% end %>
          </div>
        </li>
        <li class="nav-item active mr-2">
          <div class="nav-text">
          <%= link_to new_item_path, class: "nav-link" do %>
            <i class="fas fa-plus"></i><i class="fas fa-recycle"></i>
            <p>Add Waste</p>
          <% end %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://i.ya-webdesign.com/images/default-avatar-png-18.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", "/dashboard", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
