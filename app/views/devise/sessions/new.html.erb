<div class="form-container">
<div class="form-flexbox">

<div class="img">
<img src="https://www.pawprintbadges.co.uk/ekmps/shops/9507f2/images/recycling-collection-255-p.png" alt="" class="img-center">
</div>
<div class="simple-form">
<h2 class="new-form-title color">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="font form-actions">
    <%= f.button :submit, "Log in", class: "button mb-4" %>

  </div>
  <%= render "devise/shared/links" %>

<% end %>
</div>
</div>
</div>

